{
  "compilerOptions": {
    "target": "es2016",                                 
    "lib": ["ES2018", "DOM"],                                       
    "module": "commonjs",                               
    "outDir": "./build",                                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                           
    "skipLibCheck": true                                
  },
  "exclude": ["node_modules", "spec", "./build"],
}
